@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "~/Views/Shared/_LayoutAuth.cshtml";
}

<style>
    .login-container {
        max-width: 500px;
        margin: 0 auto;
        padding: 2rem;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        background: rgba(255, 255, 255, 0.95);
        position: relative;
        overflow: hidden;
     /*     animation: float 3s ease-in-out infinite; */
    }

        .login-container::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 5px;
            background: linear-gradient(90deg, #153355, #2a5a8a);
        }

    .form-floating {
        position: relative;
        margin-bottom: 1.5rem;
    }

    .form-control {
        padding-left: 2.5rem;
        border: 1px solid #e0e0e0;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            border-color: #153355;
            box-shadow: 0 0 0 0.25rem rgba(21, 51, 85, 0.25);
        }

    .form-floating > .form-control:not(:placeholder-shown) ~ label,
    .form-floating > .form-control:focus ~ label {
        transform: scale(0.85) translateY(-0.5rem) translateX(0.15rem);
    }

    .input-icon {
      
        position: absolute;
        left: 1rem;
        top: 50%;
        transform: translateY(-50%);
        color: #153355;
        z-index: 5;
    }

    .btn-login {
        background: linear-gradient(135deg, #153355, #2a5a8a);
        border: none;
        border-radius: 8px;
        padding: 0.75rem;
        font-weight: 600;
        letter-spacing: 0.5px;
        transition: all 0.3s ease;
         /* animation: pulse 1.5s infinite; */
    }

        .btn-login:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(21, 51, 85, 0.3);
        }

    .login-title {
        color: #153355;
        font-weight: 700;
        margin-bottom: 1.5rem;
        position: relative;
        display: inline-block;
    }

        .login-title::after {
            content: "";
            position: absolute;
            bottom: -10px;
            left: 50%;
            transform: translateX(-50%);
            width: 50px;
            height: 3px;
            background: #153355;
            border-radius: 3px;
        }

    .alert-success {
        border-left: 4px solid #28a745;
    }

    .divider {
        display: flex;
        align-items: center;
        margin: 1.5rem 0;
    }

        .divider::before, .divider::after {
            content: "";
            flex: 1;
            border-bottom: 1px solid #e0e0e0;
        }

    .divider-text {
        padding: 0 1rem;
        color: #6c757d;
        font-size: 0.9rem;
    }

        /* Bouncy icon animations */
    .fa-sign-in-alt {
        display: inline-block;
        /* animation: bounce 0.8s infinite alternate; */
    }

    
</style>

<div class="container">

    @if (TempData["SweetAlert"] != null)
    {
        <script>
            $(document).ready(function () {
                var alertData = @Html.Raw(TempData["SweetAlert"]);
                Swal.fire(alertData);
            });
        </script>
    }

    <div class="row justify-content-center align-items-center min-vh-80 py-5">
        <div class="col-lg-6 col-md-8 col-sm-12">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success text-black mb-4">
                    <i class="fas fa-check-circle me-2" style="color: #28a745;"></i>
                    @TempData["SuccessMessage"]
                </div>
            }

            <div class="login-container">
                <section>
                    <form id="account" method="post">
                        <h2 class="login-title text-center mb-4">
                            <i class="fas fa-sign-in-alt me-2"></i>Welcome 
                        </h2>

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="form-floating position-relative">
                            <i class="fas fa-user input-icon"></i>
                            <input asp-for="Input.Username" class="form-control ps-5" autocomplete="username"
                                   aria-required="true" placeholder="Username" required />
                            <label asp-for="Input.Username" class="ms-5">Username</label>
                            <span asp-validation-for="Input.Username" class="text-danger small d-block mt-1"></span>
                        </div>

                        <div class="form-floating position-relative">
                            <i class="fas fa-lock input-icon"></i>
                            <input asp-for="Input.Password" class="form-control ps-5" autocomplete="current-password"
                                   aria-required="true" placeholder="Password" required />
                            <label asp-for="Input.Password" class="ms-5">Password</label>
                            <span asp-validation-for="Input.Password" class="text-danger small d-block mt-1"></span>
                        </div>

                     @*    <div class="d-flex justify-content-between align-items-center mb-3">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="rememberMe">
                                <label class="form-check-label small" for="rememberMe">
                                    Remember me
                                </label>
                            </div>
                            <a href="#" class="small text-decoration-none" style="color: #153355;">
                                Forgot password?
                            </a>
                        </div> *@

                        <button id="login-submit" type="submit" class="btn btn-login btn-block text-white w-100 py-2 mb-3">
                            <i class="fas fa-sign-in-alt me-2"></i>Log In
                        </button>

                        @* <div class="divider">
                            <span class="divider-text">or</span>
                        </div> *@

                    @*     <div class="text-center">
                            <p class="small mb-0">
                                Don't have an account?
                                <a href="#" class="text-decoration-none" style="color: #153355; font-weight: 500;">
                                    Sign up
                                </a>
                            </p>
                        </div> *@
                    </form>
                </section>
            </div>
        </div>
    </div>
</div>

<script>
    // Add this cute typing effect to the welcome message
    document.addEventListener('DOMContentLoaded', function () {
        const title = document.querySelector('.login-title');
        const originalText = title.innerHTML;
        title.innerHTML = '';

        let i = 0;
        const typingEffect = setInterval(() => {
            title.innerHTML = originalText.substring(0, i);
            i++;
            if (i > originalText.length) clearInterval(typingEffect);
        }, 30);
    });
</script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
