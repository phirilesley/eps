
@model IEnumerable<ExaminerPaymentSystem.Models.ExamMonitors.ExamMonitorApprovalIndexViewModel>
@{
    ViewData["Title"] = "Approve Registers";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white py-3">
            <h2 class="h5 mb-0">Approve Registers</h2>
        </div>
        <div class="card-body">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success" role="alert">
                    @TempData["SuccessMessage"]
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger" role="alert">
                    @TempData["ErrorMessage"]
                </div>
            }

            <table class="table table-sm table-bordered table-hover">
                <thead class="bg-light">
                    <tr>
                        <th>Applicant's Name</th>
                        <th>Centre</th>
                        <th>Region</th>
                        <th>Cluster</th>
                        <th>SubKey</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.ClusterManagerBy</td>
                            <td>@item.CentreAttached</td>
                            <td>@item.RegionCode</td>
                            <td>@item.ClusterCode</td>
                            <td>@item.SubKey</td>
                            <td>
                                <a asp-action="RemApprove" asp-route-subKey="@item.SubKey" class="btn btn-sm btn-primary">
                                    <i class="fas fa-eye"></i> View Register
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>