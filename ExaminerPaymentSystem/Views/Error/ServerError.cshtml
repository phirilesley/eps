    <h1 class="text-danger">Whoops! Server Trouble</h1>
    <p class="lead">Our team is working hard to get things back on track</p>

    <div class="error-details mt-2">
        <div class="alert alert-warning">
            <p>@TempData["Error"]</p>
        </div>

        <div class="server-status mt-2">
            <div class="progress">
                <div class="progress-bar progress-bar-striped progress-bar-animated"
                     role="progressbar" style="width: 75%">
                    Rebooting servers...
                </div>
            </div>
        </div>
    </div>

    <div class="error-actions mt-5">
        <a href="/" class="btn btn-primary btn-lg mr-3">
            <i class="fas fa-home"></i> Take Me Home
        </a>
        <a href="mailto:support@yourcompany.com" class="btn btn-outline-secondary btn-lg">
            <i class="fas fa-envelope"></i> Contact Support
        </a>
    </div>
</div>

<style>
    .error-container {
        max-width: 800px;
        margin: 2rem auto;
        padding: 2rem;
        background: white;
        border-radius: 10px;
        box-shadow: 0 0 20px rgba(0,0,0,0.1);
    }

    .server-cart-illustration {
        max-width: 400px;
        height: auto;
        margin: 0 auto;
        display: block;
    }

    .error-actions .btn {
        min-width: 180px;
    }

    .server-status {
        max-width: 500px;
        margin: 0 auto;
    }

    @@media (max-width: 576px) {
        .error-actions .btn {
            display: block;
            width: 100%;
            margin-bottom: 10px;
        }
    }
</style>

@section Scripts {
    <!-- Add Font Awesome for icons -->
 @*    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" /> *@

    <script>
        // Optional: Add some animation
        document.addEventListener('DOMContentLoaded', function () {
            const serverLights = document.querySelectorAll('svg circle[fill="#FF5252"]');
            setInterval(() => {
                serverLights.forEach(light => {
                    light.style.fill = light.style.fill === 'rgb(255, 82, 82)' ? '#FFEB3B' : '#FF5252';
                });
            }, 500);
        });
    </script>
}
