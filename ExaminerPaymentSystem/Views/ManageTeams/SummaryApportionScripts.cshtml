@using ExaminerPaymentSystem.ViewModels.Examiners
@model SummaryScriptApportionmentViewModel


@{
    string examCode = ViewBag.ExamCode ?? "";
    string subjectCode = ViewBag.SubjectCode ?? "";
    string paperCode = ViewBag.PaperCode ?? "";
    string regionCode = ViewBag.RegionCode ?? "";
    string activity = ViewBag.Activity ?? "";
}



<div class="text-center mb-4 mt-4">
    <div class="d-flex align-items-center justify-content-center gap-2">
        <i class="fas fa-file-import" style="color: #2a5a8a;"></i> <!-- Changed icon -->
        <h4 class="fw-bold mb-0" style="color: #153355;">
            Summary Apportion Scripts :
            <span style="color: #2a5a8a;">@subjectCode / @paperCode</span>
        </h4>
    </div>
    <hr style="border-top: 1px solid black; 
    width: 100px;
    margin: 8px auto;
    ">
</div>

<div class="card shadow-sm p-4" style="background-color: #ffffff;">
    

    <form id="apportionScriptsForm">
        <div class="row mb-3">
            <div class="col-md-6">
                <div class="input-group">
                    <span class="input-group-text">Total Entries</span>
                    <input type="number" class="form-control" readonly value="@Model.TotalEntries" />
                </div>
            </div>

            <div class="col-md-6">
                <div class="input-group">
                    <span class="input-group-text">Allowed Examiners</span>
                    <input type="number" class="form-control" readonly value="@Model.AllowedExaminers" />
                </div>
            </div>
        </div>


        <div class="table-responsive">
            <table class="table table-bordered text-center">
                <thead class="table-light">
                    <tr>
                        <th>Category</th>
                        <th>Max Scripts</th>
                        <th>Examiners Available</th>
                        <th>Examiners Chosen</th>
                        <th>Script Covered</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>PMS</td>
                        <td>
                            <input type="number" class="form-control"
                                   name="maxScriptsPMS"
                                   value="@Model.MaxScriptsPMS" />
                        </td>
                        <td>
                            <input type="number" class="form-control"
                                   name="examinersAvailablePMS"
                                   value="@Model.ExaminersAvailablePMS" />
                        </td>
                        <td>
                            <input type="number" class="form-control"
                                   name="examinersChosenPMS"
                                   value="@Model.ExaminersChosenPMS" />
                        </td>
                        <td>
                            <input type="number" class="form-control"
                                   name="scriptCoveredPMS"
                                   value="@Model.ScriptCoveredPMS" />
                        </td>
                    </tr>

                    <tr>
                        <td>RPMS</td>
                        <td>
                            <input type="number" class="form-control"
                                   name="maxScriptsRPMS"
                                   value="@Model.MaxScriptsRPMS" />
                        </td>
                        <td>
                            <input type="number" class="form-control"
                                   name="examinersAvailableRPMS"
                                   value="@Model.ExaminersAvailableRPMS" />
                        </td>
                        <td>
                            <input type="number" class="form-control"
                                   name="examinersChosenRPMS"
                                   value="@Model.ExaminersChosenRPMS" />
                        </td>
                        <td>
                            <input type="number" class="form-control"
                                   name="scriptCoveredRPMS"
                                   value="@Model.ScriptCoveredRPMS" />
                        </td>
                    </tr>

                    <tr>
                        <td>DPMS</td>
                        <td>
                            <input type="number" class="form-control"
                                   name="maxScriptsDPMS"
                                   value="@Model.MaxScriptsDPMS" />
                        </td>
                        <td>
                            <input type="number" class="form-control"
                                   name="examinersAvailableDPMS"
                                   value="@Model.ExaminersAvailableDPMS" />
                        </td>
                        <td>
                            <input type="number" class="form-control"
                                   name="examinersChosenDPMS"
                                   value="@Model.ExaminersChosenDPMS" />
                        </td>
                        <td>
                            <input type="number" class="form-control"
                                   name="scriptCoveredDPMS"
                                   value="@Model.ScriptCoveredDPMS" />
                        </td>
                    </tr>

                    <tr>
                        <td>BMS</td>
                        <td>
                            <input type="number" class="form-control"
                                   name="maxScriptsBMS"
                                   value="@Model.MaxScriptsBMS" />
                        </td>
                        <td>
                            <input type="number" class="form-control"
                                   name="examinersAvailableBMS"
                                   value="@Model.ExaminersAvailableBMS" />
                        </td>
                        <td>
                            <input type="number" class="form-control"
                                   name="examinersChosenBMS"
                                   value="@Model.ExaminersChosenBMS" />
                        </td>
                        <td>
                            <input type="number" class="form-control"
                                   name="scriptCoveredBMS"
                                   value="@Model.ScriptCoveredBMS" />
                        </td>
                    </tr>

                    <tr>
                        <td>E</td>
                        <td>
                            <input type="number" class="form-control"
                                   name="maxScriptsE"
                                   value="@Model.MaxScriptsE" />
                        </td>
                        <td>
                            <input type="number" class="form-control"
                                   name="examinersAvailableE"
                                   value="@Model.ExaminersAvailableE" />
                        </td>
                        <td>
                            <input type="number" class="form-control"
                                   name="examinersChosenE"
                                   value="@Model.ExaminersChosenE" />
                        </td>
                        <td>
                            <input type="number" class="form-control"
                                   name="scriptCoveredE"
                                   value="@Model.ScriptCoveredE" />
                        </td>
                    </tr>

                    <tr class="fw-bold">
                        <td>Total</td>
                        <td>
                            <input type="number" id="totalMaxScripts" class="form-control" readonly />
                        </td>
                        <td>
                            <input type="number" id="totalExaminersAvailable" class="form-control" readonly />
                        </td>
                        <td>
                            <input type="number" id="totalExaminersChosen" class="form-control" readonly />
                        </td>
                        <td>
                            <input type="number" id="totalScriptCovered" class="form-control" readonly />
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="text-center mt-3">
           <button type="submit" class="btn px-4 text-white" style="background-color: #153355;">
                <i class="bi bi-check-circle-fill me-2"></i>
                Submit</button>
              <a href="@Url.Action("SelectTeam")"  class="btn btn-outline-danger  px-4">
                <i class="bi bi-x-circle-fill me-2"></i>
                Cancel</a>
        </div>
    </form>
</div>

<script>
    function calculateTotals() {
        let totalMaxScripts = 0;
        let totalExaminersAvailable = 0;
        let totalExaminersChosen = 0;
        let totalScriptCovered = 0;

        // Calculate totals for each column
        $('input[name^="maxScripts"]').each(function () {
            totalMaxScripts += parseInt($(this).val()) || 0;
        });

        $('input[name^="examinersAvailable"]').each(function () {
            totalExaminersAvailable += parseInt($(this).val()) || 0;
        });

        $('input[name^="examinersChosen"]').each(function () {
            totalExaminersChosen += parseInt($(this).val()) || 0;
        });

        $('input[name^="scriptCovered"]').each(function () {
            totalScriptCovered += parseInt($(this).val()) || 0;
        });

        // Update the total fields
        $('#totalMaxScripts').val(totalMaxScripts);
        $('#totalExaminersAvailable').val(totalExaminersAvailable);
        $('#totalExaminersChosen').val(totalExaminersChosen);
        $('#totalScriptCovered').val(totalScriptCovered);
    }

    $(document).ready(function () {
        calculateTotals(); // Calculate on page load
        $('input').on('input', calculateTotals); // Recalculate when values change
    });
</script>
