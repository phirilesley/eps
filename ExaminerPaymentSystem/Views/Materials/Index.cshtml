@model IEnumerable<Material>

@{
    ViewData["Title"] = "Materials Management";
}

<div class="text-center mb-4 mt-4">
    <div class="d-flex align-items-center justify-content-center gap-2">
        <i class="fas fa-marker" style="color: #2a5a8a;"></i>
        <h4 class="fw-bold mb-0" style="color: #153355;">
            Materials
        </h4>
    </div>
    <hr style="border-top: 1px solid black;
    width: 100px;
    margin: 8px auto;
    ">
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
     
        <button type="button" class="btn text-white" style="background-color:#153355;" data-bs-toggle="modal" data-bs-target="#addMaterialModal">
            <i class="fas fa-plus me-2"></i>Add Material
        </button>
    </div>

    <!-- Materials Table -->
    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table id="materialsTable" class="table table-striped table-hover w-100">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Data will be loaded via AJAX -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Add Material Modal -->
<div class="modal fade" id="addMaterialModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header  text-white" style="background-color:#153355;">
                <h5 class="modal-title">Add New Material</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="addMaterialForm" method="post">
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Name *</label>
                        <input type="text" class="form-control" name="Name" required>
                        <div class="invalid-feedback">Please provide a name.</div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Description</label>
                        <textarea class="form-control" name="Description" rows="3"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn text-white" style="background-color:#153355;">
                        <span class="spinner-border spinner-border-sm d-none" role="status"></span>
                        Save Material
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Edit Material Modal -->
<div class="modal fade" id="editMaterialModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header  text-white" style="background-color:#153355;">
                <h5 class="modal-title">Edit Material</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="editMaterialForm" method="post">
                <input type="hidden" name="Id" id="editMaterialId">
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Name *</label>
                        <input type="text" class="form-control" name="Name" id="editMaterialName" required>
                        <div class="invalid-feedback">Please provide a name.</div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Description</label>
                        <textarea class="form-control" name="Description" id="editMaterialDescription" rows="3"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn text-white" style="background-color:#153355;">
                        <span class="spinner-border spinner-border-sm d-none" role="status"></span>
                        Update Material
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this material? This action cannot be undone.</p>
                <input type="hidden" id="deleteMaterialId">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmDelete">
                    <span class="spinner-border spinner-border-sm d-none" role="status"></span>
                    Delete
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
           $(document).ready(function () {
        // Initialize DataTable
        var table = $('#materialsTable').DataTable({
            processing: true,
            serverSide: true,
            ajax: {
                url: '/Materials/GetMaterials',
                type: 'POST',
                contentType: 'application/json',
                data: function (d) {
                    return JSON.stringify(d);
                },
                error: function(xhr, error, thrown) {
                    console.log('AJAX error:', xhr.responseText);
                    toastr.error('Error loading materials data');
                }
            },
            columns: [
                { data: 'id' },
                { data: 'name' },
                { data: 'description' },
                {
                    data: 'id',
                    render: function(data, type, row) {
                        return `
                            <button class="btn btn-sm btn-outline-primary edit-btn" data-id="${data}">
                                <i class="fas fa-edit"></i> Edit
                            </button>
                            <button class="btn btn-sm btn-outline-danger delete-btn" data-id="${data}">
                                <i class="fas fa-trash"></i> Delete
                            </button>
                        `;
                    },
                    orderable: false
                }
            ],
            responsive: true,
            dom: '<"top"lf>rt<"bottom"ip><"clear">',
            language: {
                emptyTable: "No materials found",
                info: "Showing _START_ to _END_ of _TOTAL_ materials",
                infoEmpty: "Showing 0 to 0 of 0 materials",
                infoFiltered: "(filtered from _MAX_ total materials)",
                lengthMenu: "Show _MENU_ materials",
                search: "Search:",
                zeroRecords: "No matching materials found"
            }
        });

        // Debug DataTables events
        table.on('xhr.dt', function (e, settings, json, xhr) {
            console.log('DataTables response:', json);
        });

            // Add Material Form
            $('#addMaterialForm').submit(function(e) {
                e.preventDefault();
                var form = $(this);
                var submitBtn = form.find('button[type="submit"]');

                if (!form[0].checkValidity()) {
                    e.stopPropagation();
                    form.addClass('was-validated');
                    return;
                }

                submitBtn.prop('disabled', true);
                submitBtn.find('.spinner-border').removeClass('d-none');

                $.ajax({
                    url: '/Materials/Create',
                    type: 'POST',
                    data: form.serialize(),
                    success: function(response) {
                        $('#addMaterialModal').modal('hide');
                        table.ajax.reload();
                        toastr.success('Material added successfully');
                    },
                    error: function(xhr) {
                        toastr.error('Error adding material: ' + xhr.responseText);
                    },
                    complete: function() {
                        submitBtn.prop('disabled', false);
                        submitBtn.find('.spinner-border').addClass('d-none');
                    }
                });
            });

            // Edit Material Modal
            $(document).on('click', '.edit-btn', function() {
                var materialId = $(this).data('id');

                $.get('/Materials/Get/' + materialId, function(data) {
                    $('#editMaterialId').val(data.id);
                    $('#editMaterialName').val(data.name);
                    $('#editMaterialDescription').val(data.description);
                    $('#editMaterialModal').modal('show');
                }).fail(function() {
                    toastr.error('Error loading material data');
                });
            });

            // Edit Material Form
            $('#editMaterialForm').submit(function(e) {
                e.preventDefault();
                var form = $(this);
                var submitBtn = form.find('button[type="submit"]');

                if (!form[0].checkValidity()) {
                    e.stopPropagation();
                    form.addClass('was-validated');
                    return;
                }

                submitBtn.prop('disabled', true);
                submitBtn.find('.spinner-border').removeClass('d-none');

                $.ajax({
                    url: '/Materials/Edit',
                    type: 'POST',
                    data: form.serialize(),
                    success: function(response) {
                        $('#editMaterialModal').modal('hide');
                        table.ajax.reload();
                        toastr.success('Material updated successfully');
                    },
                    error: function(xhr) {
                        toastr.error('Error updating material: ' + xhr.responseText);
                    },
                    complete: function() {
                        submitBtn.prop('disabled', false);
                        submitBtn.find('.spinner-border').addClass('d-none');
                    }
                });
            });

            // Delete Confirmation
            $(document).on('click', '.delete-btn', function() {
                var materialId = $(this).data('id');
                $('#deleteMaterialId').val(materialId);
                $('#deleteModal').modal('show');
            });

            // Confirm Delete
            $('#confirmDelete').click(function() {
                var materialId = $('#deleteMaterialId').val();
                var deleteBtn = $(this);

                deleteBtn.prop('disabled', true);
                deleteBtn.find('.spinner-border').removeClass('d-none');

                $.ajax({
                    url: '/Materials/Delete/' + materialId,
                    type: 'POST',
                    success: function(response) {
                        $('#deleteModal').modal('hide');
                        table.ajax.reload();
                        toastr.success('Material deleted successfully');
                    },
                    error: function(xhr) {
                        toastr.error('Error deleting material: ' + xhr.responseText);
                    },
                    complete: function() {
                        deleteBtn.prop('disabled', false);
                        deleteBtn.find('.spinner-border').addClass('d-none');
                    }
                });
            });

            // Reset forms when modals are closed
            $('.modal').on('hidden.bs.modal', function() {
                $(this).find('form')[0].reset();
                $(this).find('form').removeClass('was-validated');
            });
        });
    </script>
}