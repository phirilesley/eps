@model List<ActivityRate>
@{
    ViewData["Title"] = "Set Activity Rates";
}

<h2>Set Activity Rates</h2>

<form asp-action="SaveActivityRates" method="post">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Activity</th>
                <th>Percentage Of Setting</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>
                        @Html.HiddenFor(m => m[i].Activity)
                        @Model[i].Activity
                    </td>
                    <td>
                        @Html.TextBoxFor(m => m[i].PercentageOfSetting, new { @class = "form-control", type = "number", step = "0.01", min = "0" })
                    </td>
                </tr>
            }

        </tbody>
    </table>

    <button type="submit" class="btn btn-primary">Save</button>
</form>
