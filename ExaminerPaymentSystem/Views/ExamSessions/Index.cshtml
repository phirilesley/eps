@model IEnumerable<ExamCodes>

@{
    ViewData["Title"] = "Exam Codes Management";
}

<style>
    /* Make Select2 match Bootstrap form control height */
    .select2-container .select2-selection--single {
        height: 38px !important;
        padding: 6px 12px;
        font-size: 14px;
        line-height: 1.5;
        border: 1px solid #ced4da;
        border-radius: 0.375rem;
    }

    .select2-container--default .select2-selection--single .select2-selection__arrow {
        height: 36px !important;
    }

    .select2-container--default .select2-selection--single .select2-selection__rendered {
        line-height: 24px !important;
    }
</style>

<div class="text-center mb-4 mt-4">
    <div class="d-flex align-items-center justify-content-center gap-2">
        <i class="fas fa-marker" style="color: #2a5a8a;"></i>
        <h4 class="fw-bold mb-0" style="color: #153355;">
            Exam Sessions
        </h4>
    </div>
    <hr style="border-top: 1px solid black;
    width: 100px;
    margin: 8px auto;
    ">
</div>

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">

        <button type="button" class="btn" style="background-color:#153355;" data-bs-toggle="modal" data-bs-target="#addExamCodeModal">
            <i class="fas fa-plus me-2"></i>Add Exam Code
        </button>
    </div>

    <style>
        .btn-custom {
            background-color: #153355;
            color: white;
            border: 1px solid #153355;
        }

            .btn-custom:hover {
                background-color: #0f2642;
                border-color: #0f2642;
                color: white;
            }

        .btn-outline-custom {
            color: #153355;
            border-color: #153355;
            background-color: transparent;
        }

            .btn-outline-custom:hover {
                color: white;
                background-color: #153355;
                border-color: #153355;
            }

    </style>
   
    <!-- Exam Codes Table -->
    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table id="examCodesTable" class="table table-striped table-hover w-100">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Exam Code</th>
                            <th>Session</th>
                            <th>Year</th>
                            <th>Level</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Data will be loaded via AJAX -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    /* Make all Select2 elements match Bootstrap form control height */
    .select2-container .select2-selection--single {
        height: 38px !important;
        padding: 6px 12px;
        font-size: 14px;
        line-height: 1.5;
        border: 1px solid #ced4da;
        border-radius: 0.375rem;
    }

    .select2-container--default .select2-selection--single .select2-selection__arrow {
        height: 36px !important;
    }

    .select2-container--default .select2-selection--single .select2-selection__rendered {
        line-height: 24px !important;
    }

    /* Ensure all selects have the same height */
    .form-select, .select2-container .select2-selection--single {
        height: 38px;
    }
</style>

<script>
    $(document).ready(function() {
        // Initialize all Select2 elements
        $('.select2').select2({
            width: '100%',
            placeholder: function() {
                return $(this).data('placeholder') || "Select an option";
            },
            allowClear: true
        });
    });
</script>

<!-- Add Exam Code Modal -->
<div class="modal fade" id="addExamCodeModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header  text-white" style="background-color:#153355;">
                <h5 class="modal-title">Add New Exam Code</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="addExamCodeForm">
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Exam Code *</label>
                            <input type="text" class="form-control" name="EXM_EXAM_CODE" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Session *</label>
                            <input type="text" class="form-control" name="EXM_EXAM_SESSION" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Year *</label>
                            <input type="text" class="form-control" name="EXM_EXAM_YEAR" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Level *</label>
                            <input type="text" class="form-control" name="EXM_EXAM_LEVEL" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Start Date</label>
                            <input type="date" class="form-control" name="EXM_START_DATE">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Close Date</label>
                            <input type="date" class="form-control" name="EXM_CLOSE_DATE">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Status</label>
                            <select class="form-select" name="EXM_STATUS">
                                <option value="Active">Active</option>
                                <option value="Inactive">Inactive</option>
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Activated Session</label>
                            <select class="form-select" name="ACTIVATED_SESSION">
                                <option value="Activated">Activated</option>
                                <option value="Not Activated">Not Activated</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn text-white" style="background-color:#153355;">
                        <span class="spinner-border spinner-border-sm d-none" role="status"></span>
                        Save Exam Code
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Edit Exam Code Modal -->
<div class="modal fade" id="editExamCodeModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header text-white" style="background-color:#153355;">
                <h5 class="modal-title">Edit Exam Code</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="editExamCodeForm">
                <input type="hidden" name="ID" id="editExamCodeId">
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Exam Code *</label>
                            <input type="text" class="form-control" name="EXM_EXAM_CODE" id="editExamCode" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Session *</label>
                            <input type="text" class="form-control" name="EXM_EXAM_SESSION" id="editSession" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Year *</label>
                            <input type="text" class="form-control" name="EXM_EXAM_YEAR" id="editYear" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Level *</label>
                            <input type="text" class="form-control" name="EXM_EXAM_LEVEL" id="editLevel" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Start Date</label>
                            <input type="date" class="form-control" name="EXM_START_DATE" id="editStartDate">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Close Date</label>
                            <input type="date" class="form-control" name="EXM_CLOSE_DATE" id="editCloseDate">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Status</label>
                            <select class="form-select" name="EXM_STATUS" id="editStatus">
                                <option value="Active">Active</option>
                                <option value="Inactive">Inactive</option>
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Activated Session</label>
                            <select class="form-select" name="ACTIVATED_SESSION" id="editActivatedSession">
                                <option value="Activated">Activated</option>
                                <option value="Not Activated">Not Activated</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">
                        <span class="spinner-border spinner-border-sm d-none" role="status"></span>
                        Update Exam Code
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this exam code? This action cannot be undone.</p>
                <input type="hidden" id="deleteExamCodeId">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmDelete">
                    <span class="spinner-border spinner-border-sm d-none" role="status"></span>
                    Delete
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>

                 $(document).ready(function () {
        var table = $('#examCodesTable').DataTable({
            processing: true,
            serverSide: true,
            ajax: {
                url: '/ExamSessions/GetExamCodes',  // This must match your controller
                type: 'POST',
                contentType: 'application/json',
                data: function (d) {
                    return JSON.stringify(d);
                },
                error: function(xhr, error, thrown) {
                    console.error('AJAX error:', xhr.responseText);
                    toastr.error('Error loading exam codes');
                }
            },
                columns: [
                    { data: 'id' },
                    { data: 'exm_EXAM_CODE' },
                    { data: 'exm_EXAM_SESSION' },
                    { data: 'exm_EXAM_YEAR' },
                    { data: 'exm_EXAM_LEVEL' },
                    {
                        data: 'exm_STATUS',
                        render: function(data) {
                            return data === 'Activated' ?
                                '<span class="badge bg-success">Active</span>' :
                                '<span class="badge bg-secondary">Inactive</span>';
                        }
                    },
                    {
                        data: 'id',
                        render: function(data, type, row) {
                            return `
                                <button class="btn btn-sm btn-outline-primary edit-btn" data-id="${data}">
                                    <i class="fas fa-edit"></i> Edit
                                </button>
                                <button class="btn btn-sm btn-outline-danger delete-btn" data-id="${data}">
                                    <i class="fas fa-trash"></i> Delete
                                </button>
                            `;
                        },
                        orderable: false
                    }
                ],
                responsive: true,
                dom: '<"top"lf>rt<"bottom"ip><"clear">',
                language: {
                    emptyTable: "No exam codes found",
                    info: "Showing _START_ to _END_ of _TOTAL_ exam codes",
                    infoEmpty: "Showing 0 to 0 of 0 exam codes",
                    infoFiltered: "(filtered from _MAX_ total exam codes)",
                    lengthMenu: "Show _MENU_ exam codes",
                    search: "Search:",
                    zeroRecords: "No matching exam codes found"
                }
            });

            // Debug DataTables response
            table.on('xhr.dt', function (e, settings, json, xhr) {
                console.log('DataTables response:', json);
            });
  



            // Add Exam Code Form
            $('#addExamCodeForm').submit(function(e) {
                e.preventDefault();
                var form = $(this);
                var submitBtn = form.find('button[type="submit"]');

                submitBtn.prop('disabled', true);
                submitBtn.find('.spinner-border').removeClass('d-none');

                $.ajax({
                    url: '/ExamSessions/Create',
                    type: 'POST',
                    data: form.serialize(),
                    success: function(response) {
                        $('#addExamCodeModal').modal('hide');
                        table.ajax.reload();
                        toastr.success('Exam code added successfully');
                    },
                    error: function(xhr) {
                        toastr.error('Error adding exam code: ' + xhr.responseText);
                    },
                    complete: function() {
                        submitBtn.prop('disabled', false);
                        submitBtn.find('.spinner-border').addClass('d-none');
                    }
                });
            });

            // Edit Exam Code Modal
            $(document).on('click', '.edit-btn', function() {
                var examCodeId = $(this).data('id');

                $.get('/ExamSessions/Get/' + examCodeId, function(data) {
                    $('#editExamCodeId').val(data.id);
                    $('#editExamCode').val(data.exm_EXAM_CODE);
                    $('#editSession').val(data.exm_EXAM_SESSION);
                    $('#editYear').val(data.exm_EXAM_YEAR);
                    $('#editLevel').val(data.exm_EXAM_LEVEL);
                    $('#editStartDate').val(data.exm_START_DATE);
                    $('#editCloseDate').val(data.exm_CLOSE_DATE);
                    $('#editStatus').val(data.exm_STATUS);
                    $('#editActivatedSession').val(data.activated_SESSION);
                    $('#editExamCodeModal').modal('show');
                }).fail(function() {
                    toastr.error('Error loading exam code data');
                });
            });

            // Edit Exam Code Form
            $('#editExamCodeForm').submit(function(e) {
                e.preventDefault();
                var form = $(this);
                var submitBtn = form.find('button[type="submit"]');

                submitBtn.prop('disabled', true);
                submitBtn.find('.spinner-border').removeClass('d-none');

                $.ajax({
                    url: '/ExamSessions/Edit',
                    type: 'POST',
                    data: form.serialize(),
                    success: function(response) {
                        $('#editExamCodeModal').modal('hide');
                        table.ajax.reload();
                        toastr.success('Exam code updated successfully');
                    },
                    error: function(xhr) {
                        toastr.error('Error updating exam code: ' + xhr.responseText);
                    },
                    complete: function() {
                        submitBtn.prop('disabled', false);
                        submitBtn.find('.spinner-border').addClass('d-none');
                    }
                });
            });

            // Delete Confirmation
            $(document).on('click', '.delete-btn', function() {
                var examCodeId = $(this).data('id');
                $('#deleteExamCodeId').val(examCodeId);
                $('#deleteModal').modal('show');
            });

            // Confirm Delete
            $('#confirmDelete').click(function() {
                var examCodeId = $('#deleteExamCodeId').val();
                var deleteBtn = $(this);

                deleteBtn.prop('disabled', true);
                deleteBtn.find('.spinner-border').removeClass('d-none');

                $.ajax({
                    url: '/ExamSessions/Delete/' + examCodeId,
                    type: 'POST',
                    success: function(response) {
                        $('#deleteModal').modal('hide');
                        table.ajax.reload();
                        toastr.success('Exam code deleted successfully');
                    },
                    error: function(xhr) {
                        toastr.error('Error deleting exam code: ' + xhr.responseText);
                    },
                    complete: function() {
                        deleteBtn.prop('disabled', false);
                        deleteBtn.find('.spinner-border').addClass('d-none');
                    }
                });
            });

            // Reset forms when modals are closed
            $('.modal').on('hidden.bs.modal', function() {
                $(this).find('form')[0].reset();
            });
        });
    </script>
}
