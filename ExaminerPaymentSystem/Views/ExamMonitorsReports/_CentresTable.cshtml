@model List<Centre>

<div class="table-responsive">
    <table class="table table-hover centres-table">
        <thead>
            <tr>
                <th>Centre Number</th>
                <th>Centre Name</th>
                <th>Region</th>
                <th>District</th>
                <th>Cluster</th>
                <th>School Type</th>
                <th>Centre Type</th>
                <th>Status</th>
              
            </tr>
        </thead>
        <tbody>
            @if (Model.Any())
            {
                @foreach (var centre in Model)
                {
                    <tr>
                        <td>@centre.CentreNumber</td>
                        <td>@centre.CentreName</td>
                        <td>@centre.RegionCode</td>
                        <td>@centre.DistrictName</td>
                        <td>
                            @if (!string.IsNullOrEmpty(centre.ClusterName))
                            {
                                <span class="badge bg-info">@centre.ClusterName</span>
                            }
                            else
                            {
                                <span class="text-muted">N/A</span>
                            }
                        </td>
                        <td>@centre.SchoolType</td>
                        <td>
                            @if (centre.IsCluster == "IsCluster")
                            {
                                <span class="badge badge-cluster">Cluster</span>
                            }
                            else if (centre.IsResident == "IsResident")
                            {
                                <span class="badge badge-resident">Resident</span>
                            }
                            else
                            {
                                <span class="badge badge-district">N/A</span>
                            }
                        </td>
                        <td>
                            <span class="badge bg-success">Active</span>
                        </td>
                     
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="9" class="text-center py-5">
                        <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                        <h4 class="text-muted">No centres found</h4>
                        <p class="text-muted">Try adjusting your filters to see results</p>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
